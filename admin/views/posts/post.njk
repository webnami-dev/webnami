{% extends "base.njk" %}

{% block content %}
  <div class="max-w-3xl mx-auto">
    <h1 class="text-2xl font-semibold text-content mb-6">Edit Post</h1>

    <form id="post-form" data-slug="{{ post.slug }}" class="flex flex-col gap-4">
      <div>
        <label for="title" class="block text-sm font-medium text-content mb-1">Title</label>
        <input type="text" id="title" name="title" required value="{{ post.title }}"
          class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
      </div>
      <div>
        <label for="description" class="block text-sm font-medium text-content mb-1">Description</label>
        <input type="text" id="description" name="description" value="{{ post.description }}"
          class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="tags" class="block text-sm font-medium text-content mb-1">Tags (comma separated)</label>
          <input type="text" id="tags" name="tags" value="{{ post.tags }}"
            class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
        </div>
        <div>
          <label for="category" class="block text-sm font-medium text-content mb-1">Category</label>
          <input type="text" id="category" name="category" value="{{ post.category }}"
            class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="author" class="block text-sm font-medium text-content mb-1">Author</label>
          <input type="text" id="author" name="author" value="{{ post.author }}"
            class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
        </div>
        <div>
          <label for="date" class="block text-sm font-medium text-content mb-1">Date</label>
          <input type="text" id="date" name="date" required value="{{ post.date }}"
            class="w-full px-3 py-2 rounded-lg border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
        </div>
      </div>
      <div>
        <label for="content" class="block text-sm font-medium text-content mb-1">Content</label>
        <textarea id="content" name="content">{{ post.content }}</textarea>
      </div>
      <div class="flex items-center gap-3">
        <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary text-white text-sm font-medium hover:bg-primary/80 transition-colors">
          Save Changes
        </button>
        <button type="button" id="delete-btn" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-red-300 text-red-600 text-sm font-medium hover:bg-red-50 transition-colors">
          <i data-lucide="trash-2" class="w-4 h-4"></i>
          Delete
        </button>
      </div>
    </form>
  </div>

  <script type="module" src="/admin/js/post.js"></script>
{% endblock %}
