{% extends "base.njk" %}

{% block content %}
  <div class="max-w-2xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-semibold text-content">Posts</h1>
        <a href="/admin/posts/new" class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-primary text-white text-sm font-medium hover:bg-primary/80 transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          New Post
        </a>
      </div>
    <div class="flex flex-col gap-3">
      {% for post in data %}
        <div class="flex items-center justify-between px-4 py-3 border-b border-border">
          <a href="/admin/posts/{{ post.slug }}" class="text-sm font-medium text-content hover:text-primary transition-colors">
            {{ post.title }}
          </a>
          <a href="{{ post.url }}" target="_blank" title="Preview" class="p-2 rounded-md text-accent hover:bg-hover hover:text-content transition-colors">
            <i data-lucide="external-link" class="w-4 h-4"></i>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
