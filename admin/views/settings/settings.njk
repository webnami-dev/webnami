{% extends "base.njk" %}

{% macro imageSelect(id, name, label, currentValue, images) %}
  <div>
    <label for="{{ id }}" class="block text-sm font-medium text-content mb-1">{{ label }}</label>
    <select id="{{ id }}" name="{{ name }}"
      class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
      {% for img in images %}
        <option value="{{ img }}" {% if img == currentValue %}selected{% endif %}>{{ img }}</option>
      {% endfor %}
    </select>
  </div>
{% endmacro %}

{% block content %}
  <div class="max-w-3xl mx-auto">
    <h1 class="text-2xl font-semibold text-content mb-6">Settings</h1>

    <form id="settings-form" class="flex flex-col gap-8">

      {# ── General ── #}
      <section>
        <h2 class="text-lg font-semibold text-content mb-4 flex items-center gap-2">
          <i data-lucide="settings" class="w-5 h-5"></i>
          General
        </h2>
        <div class="flex flex-col gap-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="siteName" class="block text-sm font-medium text-content mb-1">Site Name</label>
              <input type="text" id="siteName" name="siteName" value="{{ config.site.name }}"
                class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            </div>
            <div>
              <label for="siteUrl" class="block text-sm font-medium text-content mb-1">Site URL</label>
              <input type="url" id="siteUrl" name="siteUrl" value="{{ config.site.url }}"
                class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="siteLanguage" class="block text-sm font-medium text-content mb-1">Language</label>
              <input type="text" id="siteLanguage" name="siteLanguage" value="{{ config.site.language }}"
                class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            </div>
            <div>
              <label for="postsPerPage" class="block text-sm font-medium text-content mb-1">Posts Per Page</label>
              <input type="number" id="postsPerPage" name="postsPerPage" value="{{ config.postsPerPage }}" min="1"
                class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            {{ imageSelect("siteLogo", "siteLogo", "Logo", config.site.logo, images) }}
            {{ imageSelect("siteFavicon", "siteFavicon", "Favicon", config.site.favicon, images) }}
          </div>
          <div>
            <label for="homepageHeading" class="block text-sm font-medium text-content mb-1">Homepage Heading</label>
            <input type="text" id="homepageHeading" name="homepageHeading" value="{{ config.homepage.heading }}"
              class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="homepageTitle" class="block text-sm font-medium text-content mb-1">Homepage Meta Title</label>
              <input type="text" id="homepageTitle" name="homepageTitle" value="{{ config.homepage.metadata.title }}"
                class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
            </div>
            {{ imageSelect("homepageImg", "homepageImg", "Homepage OG Image", config.homepage.metadata.img, images) }}
          </div>
          <div>
            <label for="homepageDescription" class="block text-sm font-medium text-content mb-1">Homepage Meta Description</label>
            <input type="text" id="homepageDescription" name="homepageDescription" value="{{ config.homepage.metadata.description }}"
              class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
          <div>
            <label for="siteCsp" class="block text-sm font-medium text-content mb-1">Content Security Policy</label>
            <input type="text" id="siteCsp" name="siteCsp" value="{{ config.site.csp }}"
              class="w-full px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary">
          </div>
        </div>
      </section>

      {# ── Navbar ── #}
      <section>
        <h2 class="text-lg font-semibold text-content mb-4 flex items-center gap-2">
          <i data-lucide="menu" class="w-5 h-5"></i>
          Navbar
        </h2>
        <div class="flex flex-col gap-3" id="navbar-links">
          {% for link in config.navbar.links %}
            <div class="flex items-center gap-3 navbar-link-row">
              <input type="text" placeholder="Label" value="{{ link.name }}"
                class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary navbar-link-name">
              <input type="text" placeholder="/path" value="{{ link.href }}"
                class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary navbar-link-href">
              <button type="button" class="p-2 rounded-md border border-red-300 text-red-600 hover:bg-red-50 transition-colors remove-row">
                <i data-lucide="x" class="w-4 h-4"></i>
              </button>
            </div>
          {% endfor %}
        </div>
        <button type="button" id="add-navbar-link"
          class="mt-3 inline-flex items-center gap-2 px-3 py-2 rounded-md border border-border text-content text-sm font-medium hover:bg-hover transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          Add Link
        </button>
      </section>

      {# ── Footer ── #}
      <section>
        <h2 class="text-lg font-semibold text-content mb-4 flex items-center gap-2">
          <i data-lucide="layout-template" class="w-5 h-5"></i>
          Footer
        </h2>

        <h3 class="text-sm font-semibold text-accent mb-3">Social Links</h3>
        <div class="flex flex-col gap-3" id="social-links">
          {% for link in config.footer.socialLinks %}
            <div class="flex items-center gap-3 social-link-row">
              <input type="text" placeholder="Platform (e.g. facebook)" value="{{ link.name }}"
                class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary social-link-name">
              <input type="text" placeholder="URL" value="{{ link.href }}"
                class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary social-link-href">
              <button type="button" class="p-2 rounded-md border border-red-300 text-red-600 hover:bg-red-50 transition-colors remove-row">
                <i data-lucide="x" class="w-4 h-4"></i>
              </button>
            </div>
          {% endfor %}
        </div>
        <button type="button" id="add-social-link"
          class="mt-3 mb-6 inline-flex items-center gap-2 px-3 py-2 rounded-md border border-border text-content text-sm font-medium hover:bg-hover transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          Add Social Link
        </button>

        <h3 class="text-sm font-semibold text-accent mb-3">Link Groups</h3>
        <div class="flex flex-col gap-6" id="link-groups">
          {% for group in config.footer.linkGroups %}
            <div class="link-group border border-border rounded-md p-4">
              <div class="flex items-center gap-3 mb-3">
                <input type="text" placeholder="Group Title (optional)" value="{{ group.title }}"
                  class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary group-title">
                <button type="button" class="p-2 rounded-md border border-red-300 text-red-600 hover:bg-red-50 transition-colors remove-group">
                  <i data-lucide="trash-2" class="w-4 h-4"></i>
                </button>
              </div>
              <div class="flex flex-col gap-3 group-links">
                {% for link in group.links %}
                  <div class="flex items-center gap-3 group-link-row">
                    <input type="text" placeholder="Label" value="{{ link.name }}"
                      class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary group-link-name">
                    <input type="text" placeholder="/path" value="{{ link.href }}"
                      class="flex-1 px-3 py-2 rounded-md border border-border bg-surface text-content text-sm focus:outline-none focus:ring-2 focus:ring-primary group-link-href">
                    <button type="button" class="p-2 rounded-md border border-red-300 text-red-600 hover:bg-red-50 transition-colors remove-row">
                      <i data-lucide="x" class="w-4 h-4"></i>
                    </button>
                  </div>
                {% endfor %}
              </div>
              <button type="button"
                class="mt-3 inline-flex items-center gap-2 px-3 py-2 rounded-md border border-border text-content text-sm font-medium hover:bg-hover transition-colors add-group-link">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Add Link
              </button>
            </div>
          {% endfor %}
        </div>
        <button type="button" id="add-link-group"
          class="mt-3 inline-flex items-center gap-2 px-3 py-2 rounded-md border border-border text-content text-sm font-medium hover:bg-hover transition-colors">
          <i data-lucide="plus" class="w-4 h-4"></i>
          Add Link Group
        </button>
      </section>

      <div>
        <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-primary text-white text-sm font-medium hover:bg-primary/80 transition-colors">
          <i data-lucide="save" class="w-4 h-4"></i>
          Save Settings
        </button>
      </div>
    </form>
  </div>

  <script type="module" src="/admin/js/settings.js"></script>
{% endblock %}
