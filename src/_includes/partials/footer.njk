<footer class="bg-gray-100 text-gray-700">
  <div
    class="w-3/4 py-12 mx-auto flex md:items-center lg:items-start md:flex-row md:flex-nowrap flex-wrap flex-col"
  >
    <!-- Logo and social section -->
    <div
      class="w-64 flex-shrink-0 md:mx-0 mx-auto text-center md:text-left mb-10 md:mb-0 pt-10 md:pt-0"
    >
      <!-- Logo -->
      <div
        class="flex title-font font-medium items-center justify-center text-gray-700 mb-4"
      >
        {% if config.branding.logo.src %}
        <img
          class="h-8 sm:h-12 w-auto"
          src="{{ config.branding.logo.src }}"
          alt="{{ config.branding.logo.alt }}"
        />
        {% endif %}
        <span class="ml-2 text-xl font-bold">
          {{ config.site.name }}
        </span>
      </div>

      <!-- Social Icons -->
      <div class="flex justify-center space-x-3 mb-4">
        {% for icon in config.footer.socialLinks %}
        <a
          href="{{ icon.href }}"
          class="text-gray-700 hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="{{ icon.name | title }}"
        >
          {% icon icon.name, "w-5 h-5" | safe %}
        </a>
        {% endfor %}
      </div>

      <!-- Copyright -->
      <p class="text-gray-700 text-sm text-center">
        All rights reserved Â© {% currentYear %}.
      </p>
    </div>

    <!-- Link Groups -->
    <div
      class="flex-grow flex flex-wrap md:pr-20 -mb-10 md:text-left text-center order-first"
    >
      {% for group in config.footer.linkGroups %}
      <div class="lg:w-1/3 md:w-1/2 w-full pb-10">
        {% if group.displayGroupTitle %}
        <h2
          class="title-font font-bold tracking-widest text-sm mb-3 text-gray-700 uppercase"
        >
          {{ group.title }}
        </h2>
        {% endif %}
        <ul class="list-none">
          {% for link in group.links %}
          <li class="mb-2">
            <a
              href="{{ link.href }}"
              class="text-gray-700 hover:text-primary-500 transition-colors duration-200 text-sm"
              >{{ link.name }}</a
            >
          </li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="w-full bg-gray-100 text-center text-sm py-2">
    <p>
      Built with
      <a
        class="text-primary-800"
        href="https://github.com/webnami-dev/webnami"
        target="_blank"
        rel="noopener"
        >WebNami</a
      >
    </p>
  </div>
</footer>
