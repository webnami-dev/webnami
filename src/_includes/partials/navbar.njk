<nav class="">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="block md:flex md:flex-row md:justify-between md:items-center py-4 md:py-0 md:h-16"
    >
      <div class="flex justify-center md:justify-start mb-4 md:mb-0">
        <a href="#" class="flex items-center">
          <img
            class="h-8 sm:h-12 w-auto"
            src="{{ config.meta.logo.src }}"
            alt="{{ config.meta.logo.alt }}"
          />
        </a>
      </div>

      <div
        class="flex flex-row justify-center items-center md:space-y-0 md:space-x-4"
      >
        {% for link in config.navbar.links %} {% if not link.cta %}
        <a
          href="{{ link.href }}"
          class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-light transition-colors duration-200"
        >
          {{ link.name }}
        </a>
        {% else %}
        <a
          href="{{ link.href }}"
          class="bg-blue-600 hover:bg-blue-600/50 text-white text-sm font-medium py-2 px-4 rounded-lg transition-colors"
        >
          {{ link.name }}
        </a>
        {% endif %} {% endfor %}
      </div>
    </div>
  </div>
</nav>
