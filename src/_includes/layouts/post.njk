---
layout: "base.njk"
---

<main class="min-h-screen py-10">
  <!-- Content Section -->
  <article
    class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 prose prose-base prose-strong:text-content prose-ol:text-content prose-li:text-content prose-ul:text-content prose-headings:text-content prose-p:text-content prose-a:text-primary-500 prose-a:no-underline prose-a:hover:text-primary-500/50"
  >
    <h1 class="sm:text-4xl text-3xl font-bold mb-4">{{ title }}</h1>
    <div class="flex flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        <div>
          <span class="text-accent text-sm">{{ date | postDate }}</span>
        </div>
        {% if category %}
        <a
          href="/category/{{ category | slugify }}"
          class="bg-primary-100 px-4 py-1 rounded-md text-sm font-medium no-underline"
          >{{ category }}</a
        >
        {% endif %}
      </div>
      <div class="flex space-x-3">
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{
            config.site.url
          }}{{ page.url }}"
          class="text-content hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on Facebook"
        >
          {% icon "facebook", "w-5 h-5" | safe %}
        </a>
        <a
          href="https://twitter.com/intent/tweet?url={{ config.site.url }}{{
            page.url
          }}"
          class="text-content hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on Twitter"
        >
          {% icon "twitter", "w-5 h-5" | safe %}
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{
            config.site.url
          }}{{ page.url }}"
          class="text-content hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Share on LinkedIn"
        >
          {% icon "linkedin", "w-5 h-5" | safe %}
        </a>
      </div>
    </div>
    {% if author %}
    <a
      href="/author/{{ author | slugify }}"
      class="text-sm font-medium no-underline"
      >By {{ author }}</a
    >
    {% endif %}
    {{ content | anchorLinks | safe }}
    {% if tags.length > 0 %}
    <div class="flex flex-row items-center justify-between gap-4 my-10">
      <div class="flex items-center gap-4">
        {% for tag in tags %}
        <a
          href="/tags/{{ tag | slugify }}"
          class="bg-primary-100 px-4 py-1 rounded-md text-sm font-medium no-underline"
          >{{ tag }}</a
        >
        {% endfor %}
      </div>
    </div>
    {% endif %} {%- if collections.posts %} {%- set previousPost =
    collections.posts | getPreviousCollectionItem %} {%- set nextPost =
    collections.posts | getNextCollectionItem %} {%- if nextPost or previousPost
    %}
    <div class="flex justify-between items-start gap-4 py-6 border-t">
      {%- if previousPost %}
      <div class="text-left">
        <p class="text-accent text-sm mb-1">← Previous</p>
        <a
          href="{{ previousPost.url }}"
          class="text-primary-500 hover:text-primary-800 text-sm font-medium no-underline"
        >
          {{ previousPost.data.title }}
        </a>
      </div>
      {% else %}
      <div></div>
      {% endif %} {%- if nextPost %}
      <div class="text-right">
        <p class="text-accent text-sm mb-1">Next →</p>
        <a
          href="{{ nextPost.url }}"
          class="text-primary-500 hover:text-primary-800 text-sm font-medium no-underline"
        >
          {{ nextPost.data.title }}
        </a>
      </div>
      {% else %}
      <div></div>
      {% endif %}
    </div>
    {%- endif %} {%- endif %}
  </article>
</main>
