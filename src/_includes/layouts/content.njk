---
layout: "base.njk"
---

<main class="min-h-screen py-10">
  <!-- Content Section -->
  <article
    class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 prose prose-lg prose-headings:text-gray-700 prose-p:text-500 prose-a:text-primary-500 prose-a:hover:text-primary-500/50"
  >
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ heading }}</h1>
    <div class="flex flex-row items-center justify-between gap-4 mb-4">
      <div class="flex items-center gap-4">
        {% if config.posts.showDate %}
        <p class="text-gray-500 text-sm">{{ date | postDate }}</p>
        {% endif %} {% if config.posts.showCategory %}
        <a
          href="/category/{{ category | slugify }}"
          class="bg-primary-200 px-4 py-1 rounded-lg text-sm font-medium no-underline"
          >{{ category }}</a
        >
        {% endif %}
      </div>
      <div class="flex space-x-3">
        <a
          href="https://www.facebook.com/sharer/sharer.php?u={{
            config.meta.url
          }}{{ page.url }}"
          class="text-gray-700 hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% icon "Facebook", "w-5 h-5" | safe %}
        </a>
        <a
          href="https://twitter.com/intent/tweet?url={{ config.meta.url }}{{
            page.url
          }}"
          class="text-gray-700 hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% icon "Twitter", "w-5 h-5" | safe %}
        </a>
        <a
          href="https://www.linkedin.com/shareArticle?mini=true&url={{
            config.meta.url
          }}{{ page.url }}"
          class="text-gray-700 hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          {% icon "Linkedin", "w-5 h-5" | safe %}
        </a>
      </div>
    </div>
    {% if config.posts.showAuthor %}
    <p class="text-gray-500 text-sm">By {{ author }}</p>
    {% endif %}
    <img
      src="{{ img }}"
      alt="{{ imgAlt }}"
      class="w-full h-auto mb-4 rounded-lg"
    />
    {{ content | safe }}
    {% if tags.length > 0 %}
    <div class="flex flex-row items-center justify-between gap-4 my-10">
      <div class="flex items-center gap-4">
        {% for tag in tags %}
        <a
          href="/tags/{{ tag | slugify }}"
          class="bg-primary-200 px-4 py-1 rounded-lg text-sm font-medium no-underline"
          >{{ tag }}</a
        >
        {% endfor %}
      </div>
    </div>
    {% endif %} {%- if collections.posts %} {%- set previousPost =
    collections.posts | getPreviousCollectionItem %} {%- set nextPost =
    collections.posts | getNextCollectionItem %} {%- if nextPost or previousPost
    %}
    <div class="flex justify-between items-start gap-4 py-6 border-t">
      {%- if previousPost %}
      <div class="text-left">
        <p class="text-gray-500 text-sm mb-1">← Previous</p>
        <a
          href="{{ previousPost.url }}"
          class="text-primary-500 hover:text-primary-800 text-sm font-medium no-underline"
        >
          {{ previousPost.data.heading }}
        </a>
      </div>
      {% else %}
      <div></div>
      {% endif %} {%- if nextPost %}
      <div class="text-right">
        <p class="text-gray-500 text-sm mb-1">Next →</p>
        <a
          href="{{ nextPost.url }}"
          class="text-primary-500 hover:text-primary-800 text-sm font-medium no-underline"
        >
          {{ nextPost.data.heading }}
        </a>
      </div>
      {% else %}
      <div></div>
      {% endif %}
    </div>
    {%- endif %} {%- endif %}
  </article>
</main>
