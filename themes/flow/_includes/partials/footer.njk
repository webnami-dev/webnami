<footer class="bg-footer border-t border-accent/8">
  <div class="max-w-[42rem] mx-auto px-5 py-8">
    {% if config.footer %}
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 text-sm text-accent">
      <div class="flex flex-wrap items-center gap-x-4 gap-y-1">
        <a
        href="/rss.xml"
        class="hover:text-content"
      >RSS</a>
        {% for p in collections.pages | footerPages %}
        <a
          href="{{ p.url }}"
          class="hover:text-content"
        >{{ p.data.title }}</a>
        {% endfor %}
      </div>

      <div class="flex items-center gap-4">
        {% for icon in config.footer.socialLinks %}
        {% if icon.href %}
        <a
          href="{{ icon.href }}"
          class="hover:text-content capitalize"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="{{ icon.name | title }}"
        >{{ icon.name }}</a>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}

    <p class="mt-4 text-xs text-accent/40">
      Built with <a class="hover:text-accent text-accent/50" href="https://webnami.in" target="_blank" rel="noopener">WebNami</a>
    </p>
  </div>
</footer>
