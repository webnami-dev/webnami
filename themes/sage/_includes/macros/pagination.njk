<!-- Pagination navigation -->
{% macro pagination(posts, type) %}
{% if posts.total > config.postsPerPage %}
<div class="flex justify-between items-center gap-4 mt-12 pt-8">
  {% set totalPages = (posts.total / config.postsPerPage) | round(0, "ceil") %}
  {% if posts.page > 1 %}
  <div>
    <a
      href="{% if type == 'posts' and posts.page <= 2 %}/{% else %}/{{
        type
      }}{% if type != 'posts' %}/{{
        posts.name | slugify
      }}{% endif %}/{% if posts.page > 2 %}{{
        posts.page - 1
      }}/{% endif %}{% endif %}"
      class="sage-pagination-link"
    >
      <span class="sage-pagination-line"></span>
      Previous
      <span class="sage-pagination-line"></span>
    </a>
  </div>
  {% else %}
  <div></div>
  {% endif %}
  {% if posts.page < totalPages %}
  <div>
    <a
      href="/{{ type }}{% if type != 'posts' %}/{{
        posts.name | slugify
      }}{% endif %}/{{ posts.page + 1 }}/"
      class="sage-pagination-link"
    >
      <span class="sage-pagination-line"></span>
      Next
      <span class="sage-pagination-line"></span>
    </a>
  </div>
  {% else %}
  <div></div>
  {% endif %}
</div>
{% endif %}
{% endmacro %}

<!-- Pagination navigation for home page - "OLDER POSTS" with decorative lines -->
{% macro paginationHomePage(postsPage) %}
<div class="flex justify-center mt-14 pt-8">
  <a
    href="/posts/{{ postsPage.page + 1 }}"
    class="sage-pagination-link"
  >
    <span class="sage-pagination-line"></span>
    Older Posts
    <span class="sage-pagination-line"></span>
  </a>
</div>
{% endmacro %}
