<!-- Pagination navigation -->
{% macro pagination(posts, type) %}
{% if posts.total > config.postsPerPage %}
<div class="flex justify-between items-center gap-4 mt-12 pt-8 border-t border-border">
  {% set totalPages = (posts.total / config.postsPerPage) | round(0, "ceil") %}
  {% if posts.page > 1 %}
  <div>
    <a
      href="{% if type == 'posts' and posts.page <= 2 %}/{% else %}/{{
        type
      }}{% if type != 'posts' %}/{{
        posts.name | slugify
      }}{% endif %}/{% if posts.page > 2 %}{{
        posts.page - 1
      }}/{% endif %}{% endif %}"
      class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-dm font-medium text-primary-500 border border-primary-500/30 rounded-sm hover:bg-primary-500 hover:text-white transition-all duration-300"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
      </svg>
      Previous
    </a>
  </div>
  {% else %}
  <div></div>
  {% endif %}
  {% if posts.page < totalPages %}
  <div>
    <a
      href="/{{ type }}{% if type != 'posts' %}/{{
        posts.name | slugify
      }}{% endif %}/{{ posts.page + 1 }}/"
      class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-dm font-medium text-primary-500 border border-primary-500/30 rounded-sm hover:bg-primary-500 hover:text-white transition-all duration-300"
    >
      Next
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </a>
  </div>
  {% else %}
  <div></div>
  {% endif %}
</div>
{% endif %}
{% endmacro %}

<!-- Pagination navigation for home page -->
{% macro paginationHomePage(postsPage) %}
<div class="flex justify-center mt-12 pt-8">
  <a
    href="/posts/{{ postsPage.page + 1 }}"
    class="inline-flex items-center gap-2 px-6 py-3 text-sm font-dm font-medium text-primary-500 border border-primary-500/30 rounded-sm hover:bg-primary-500 hover:text-white transition-all duration-300"
  >
    Older Posts
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
    </svg>
  </a>
</div>
{% endmacro %}
