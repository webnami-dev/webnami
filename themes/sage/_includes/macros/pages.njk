{% macro renderHomePage(postsPage) %}
<section class="text-content">
  {% if postsPage.page == 1 %}
  <!-- Page 1: Hero heading + Featured + Grid -->
  <div class="max-w-6xl mx-auto px-6 sm:px-8 pt-16 sm:pt-24 pb-12 text-center">
    <h1 class="font-playfair text-hero-text text-4xl sm:text-5xl lg:text-6xl font-semibold leading-tight mb-6 sage-fade-up">
      {{ config.homepage.heading }}
    </h1>
    <div class="sage-line sage-line-center sage-fade-up-delay-1"></div>
  </div>
  {%- include 'partials/categorynav.njk' -%}
  {{ cl.homePagePostsGrid(postsPage) }}
  {% else %}
  <!-- Page 2+: Grid Layout Only -->
  <div class="max-w-6xl mx-auto px-6 sm:px-8 pt-12 sm:pt-20 pb-10 text-center sage-fade-up">
    <span class="sage-tag inline-block mb-4">Archive</span>
    <h1 class="font-playfair text-hero-text text-3xl sm:text-5xl font-semibold mb-3">
      All Posts
    </h1>
    <p class="text-muted text-sm font-dm">Page {{ postsPage.page }}</p>
    <div class="sage-line sage-line-center mt-6"></div>
  </div>
  {{ cl.postsGrid(postsPage, "posts") }}
  {% endif %}
  <div class="pb-16 sm:pb-24"></div>
</section>
{% endmacro %}
