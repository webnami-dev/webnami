<!-- Reusable post card - horizontal: image left, content right, centered text -->
{% macro postCard(post, extraClass) %}
{% set meta = post | postMeta %}
<article class="sage-post-entry group {{ extraClass }}">
  <a
    class="flex flex-col sm:flex-row gap-6 sm:gap-8 items-center"
    href="{{ post.url }}"
  >
    <!-- Thumbnail on the left -->
    <div class="w-full sm:w-56 md:w-64 flex-shrink-0">
      <div class="sage-img-wrap aspect-[4/3] sm:aspect-square rounded-sm overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="{{ meta.image }}"
          alt="{{ post.data.title }}"
        />
      </div>
    </div>
    <!-- Content on the right, centered -->
    <div class="flex-1 flex flex-col items-center text-center py-2">
      {{ categoryBadge(post) }}
      <h2
        class="font-playfair text-hero-text text-xl sm:text-2xl font-semibold leading-snug group-hover:text-primary-500 transition-colors mt-2 mb-3"
      >
        {{ post.data.title }}
      </h2>
      <p class="text-accent text-sm leading-relaxed mb-4 line-clamp-3">
        {{ meta.excerpt }}
      </p>
      <span class="sage-read-more">Read More</span>
    </div>
  </a>
</article>
{% endmacro %}

<!-- Featured post (hero layout) - vertical: centered text, image, excerpt, read more -->
{% macro featuredCard(post) %}
{% set meta = post | postMeta %}
<article class="sage-featured-entry sage-fade-up">
  <a href="{{ post.url }}" class="group flex flex-col items-center text-center">
    <!-- Category -->
    {{ categoryBadge(post) }}
    <!-- Title -->
    <h2
      class="font-playfair text-hero-text text-2xl sm:text-3xl lg:text-4xl font-semibold leading-tight group-hover:text-primary-500 transition-colors mt-3 mb-3"
    >
      {{ post.data.title }}
    </h2>
    <!-- Byline -->
    {{ postByline(post) }}
    <!-- Large image below text -->
    <div class="sage-img-wrap w-full aspect-[16/10] rounded-sm overflow-hidden mt-6 mb-6">
      <img
        class="w-full h-full object-cover"
        src="{{ meta.image }}"
        alt="{{ post.data.title }}"
      />
    </div>
    <!-- Excerpt below image -->
    <p class="text-accent text-base leading-relaxed mb-5 max-w-xl">
      {{ meta.excerpt }}
    </p>
    <!-- Read More -->
    <span class="sage-read-more">Read More</span>
  </a>
</article>
{% endmacro %}

<!-- Post byline (date) - uppercase, letter-spaced -->
{% macro postByline(post) %}
<p class="text-muted text-xs font-dm tracking-[0.2em] uppercase">
  {{ post.data.date | postDate }}
</p>
{% endmacro %}

<!-- Category badge - uppercase, very letter-spaced, no background -->
{% macro categoryBadge(post) %}
{% if post.data.category %}
<span class="text-muted text-[0.65rem] font-dm font-medium tracking-[0.25em] uppercase">
  {{ post.data.category }}
</span>
{% endif %}
{% endmacro %}
