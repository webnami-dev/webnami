{% if collections.categoryList.length > 0 %}
<div class="overflow-x-auto mb-10">
  <div
    class="flex items-center gap-4 max-w-5xl px-5 min-w-max mx-auto justify-center"
  >
    <!-- All Tab -->
    <a
      href="/"
      class="text-xs uppercase tracking-wider font-semibold flex-shrink-0 px-4 py-2 whitespace-nowrap transition-colors duration-200 {% if page.url == '/' or page.url.includes('/posts/') %} text-primary-500 border-b-2 border-primary-500 {% else %} text-accent hover:text-content {% endif %}"
    >
      All
    </a>

    <!-- Category Tabs -->
    {% for category in collections.categoryList %}
    <a
      href="/category/{{ category | slug }}/"
      class="text-xs uppercase tracking-wider font-semibold flex-shrink-0 px-4 py-2 whitespace-nowrap transition-colors duration-200 {% if page.url == '/category/' + (category | slug) + '/' %} text-primary-500 border-b-2 border-primary-500 {% else %} text-accent hover:text-content {% endif %}"
    >
      {{ category }}
    </a>
    {% endfor %}
  </div>
</div>
{% endif %}
