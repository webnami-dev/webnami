<footer class="bg-footer text-white/70 mt-20">
  {% if config.footer %}
  <div class="max-w-5xl mx-auto px-5 py-10">
      <!-- Links -->
      <div class="flex space-x-4 justify-center mb-6">
        <a
        href="/rss.xml"
        class="text-white/50 hover:text-primary-500 transition-colors duration-200 text-sm"
      >RSS</a>
        {% for p in collections.pages | footerPages %}
        <a
        href="{{ p.url }}"
        class="text-white/50 hover:text-primary-500 transition-colors duration-200 text-sm"
      >{{ p.data.title }}</a>
        {% endfor %}
      </div>
  
      <!-- Social Icons -->
      <div class="flex space-x-4 justify-center">
        {% for icon in config.footer.socialLinks %}
        {% if icon.href %}
        <a
          href="{{ icon.href }}"
          class="text-white/40 hover:text-primary-500 transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="{{ icon.name | title }}"
        >
          {% icon icon.name, "w-5 h-5" | safe %}
        </a>
        {% endif %}
        {% endfor %}
      </div>
  </div>
  {% endif %}

  <!-- Bottom bar -->
  <div class="border-t border-white/8">
    <div class="max-w-5xl mx-auto px-5 py-4 text-center">
      <p class="text-white/25 text-xs">
        Built with
        <a
          class="text-primary-500 hover:text-primary-400 transition-colors duration-200"
          href="https://webnami.in"
          target="_blank"
          rel="noopener"
        >WebNami</a>
      </p>
    </div>
  </div>
</footer>
