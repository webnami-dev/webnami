<footer class="bg-footer text-white/70 mt-20">
  <div class="max-w-5xl mx-auto px-5 py-14">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10">

      <!-- Brand column -->
      <div class="md:col-span-4">
        <div class="flex items-center mb-5">
          {% if config.site.logo %}
          <img
            class="h-8 sm:h-10 w-auto brightness-200"
            src="{{ config.site.logo | imagePath }}"
            alt="{{ config.site.name }}"
          />
          {% endif %}
          <span class="ml-2 font-serif text-lg font-bold text-white tracking-tight">
            {{ config.site.name }}
          </span>
        </div>

        <!-- Social Icons -->
        <div class="flex gap-3 mb-5">
          {% for icon in config.footer.socialLinks %}
          <a
            href="{{ icon.href }}"
            class="text-white/40 hover:text-primary-500 transition-colors duration-200"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="{{ icon.name | title }}"
          >
            {% icon icon.name, "w-5 h-5" | safe %}
          </a>
          {% endfor %}
        </div>

        <p class="text-white/30 text-sm">
          All rights reserved &copy; {% currentYear %}.
        </p>
      </div>

      <!-- Link Groups -->
      {% for group in config.footer.linkGroups %}
      <div class="md:col-span-{% if loop.length == 1 %}4{% elif loop.length == 2 %}4{% else %}2{% endif %}">
        {% if group.title %}
        <h2 class="text-xs uppercase tracking-widest font-semibold text-white/40 mb-4">
          {{ group.title }}
        </h2>
        {% endif %}
        <ul class="list-none space-y-3">
          {% for link in group.links %}
          <li>
            <a
              href="{{ link.href }}"
              class="text-white/50 hover:text-primary-500 transition-colors duration-200 text-sm"
            >{{ link.name }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% endfor %}
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/8">
    <div class="max-w-5xl mx-auto px-5 py-4 text-center">
      <p class="text-white/25 text-xs">
        Built with
        <a
          class="text-primary-500 hover:text-primary-400 transition-colors duration-200"
          href="https://webnami.in"
          target="_blank"
          rel="noopener"
        >WebNami</a>
      </p>
    </div>
  </div>
</footer>
