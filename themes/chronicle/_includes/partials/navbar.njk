
<div x-data="{ open: false }">
  <nav>
    <div class="max-w-5xl mx-auto px-5">
      <div class="flex justify-between items-center h-20">
        <!-- Logo / blog name -->
        <div class="flex items-center">
          {% if config.site.logo %}
          <a href="/" class="flex items-center">
            <img
              class="h-8 sm:h-10 w-auto"
              src="{{ config.site.logo | imagePath }}"
              alt="{{ config.site.name }}"
            />
          </a>
          {% endif %}
          <a href="/" class="flex items-center group">
            <span class="ml-2 text-content font-serif text-xl font-bold tracking-tight group-hover:text-primary-500 transition-colors duration-200">
              {{ config.site.name }}
            </span>
          </a>
        </div>

        <div class="flex items-center gap-1">
          <!-- Desktop nav links -->
          <nav class="hidden lg:block mr-2">
            <ul class="flex flex-row items-center gap-1 list-none">
              {% for link in config.navbar.links %}
              <li>
                <a
                  href="{{ link.href }}"
                  class="text-accent hover:text-content px-4 py-2 text-sm font-medium transition-colors duration-200"
                >
                  {{ link.name }}
                </a>
              </li>
              {% endfor %}
            </ul>
          </nav>

          <!-- Theme toggle -->
          <div x-data class="flex items-center">
            <button
              @click="$store.theme.lightTheme()"
              class="p-2 text-accent hover:text-primary-500 transition-colors duration-200"
              aria-label="Switch to light mode"
              x-show="$store.theme.dark"
            >
              {% icon "sun", "w-5 h-5" | safe %}
            </button>
            <button
              @click="$store.theme.darkTheme()"
              class="p-2 text-accent hover:text-primary-500 transition-colors duration-200"
              aria-label="Switch to dark mode"
              x-show="!$store.theme.dark"
            >
              {% icon "moon", "w-5 h-5" | safe %}
            </button>
          </div>

          <!-- Hamburger button (mobile only) -->
          <button
            @click="open = !open"
            class="lg:hidden p-2 text-accent hover:text-primary-500 transition-colors duration-200"
            aria-label="Toggle menu"
            :aria-expanded="open"
          >
            <span x-show="!open">{% icon "menu", "w-5 h-5" | safe %}</span>
            <span x-show="open">{% icon "x", "w-5 h-5" | safe %}</span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile collapse dropdown -->
  <div
    x-show="open"
    x-collapse
    @keydown.escape.window="open = false"
    class="lg:hidden bg-background border-b border-accent/10 overflow-hidden"
  >
    <ul class="flex flex-col px-6 py-4 list-none">
      {% for link in config.navbar.links %}
      <li>
        <a
          href="{{ link.href }}"
          @click="open = false"
          class="block text-accent hover:text-content py-3 text-sm font-medium border-b border-accent/10 last:border-b-0 transition-colors duration-200"
        >
          {{ link.name }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
