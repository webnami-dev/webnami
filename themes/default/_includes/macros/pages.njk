
{% import "macros/cardslist.njk" as cl %}

{% macro renderCategoryPage(categoryPage) %}
    <section class="text-content body-font">
        <div class="my-10 text-center">
        <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-header">
            Posts in category: {{ categoryPage.name }}{% if categoryPage.page > 1 %} -
            Page {{ categoryPage.page }}{% endif %}
        </h1>
        </div>
        {%- include 'partials/categorynav.njk' -%}
        {{ cl.postsGrid(categoryPage, "category") }}
    </section>
{% endmacro %}

{% macro renderTagPage(tagPage) %}
    <section class="text-content body-font">
        <div class="my-10 text-center">
        <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-header">
            Posts tagged: {{ tagPage.name }}{% if tagPage.page > 1 %} - Page
            {{ tagPage.page }}{% endif %}
        </h1>
        </div>
        {{ cl.postsGrid(tagPage, "tags") }}
    </section>
{% endmacro %}

{% macro renderAuthorPage(authorPage) %}
    <section class="text-content body-font">
        <div class="my-10 text-center">
        <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-header">
            Posts by: {{ authorPage.name }}{% if authorPage.page > 1 %} - Page
            {{ authorPage.page }}{% endif %}
        </h1>
        </div>
        {{cl.postsGrid(authorPage, "author") }}
    </section>
{% endmacro %}


{% macro renderHomePage(postsPage) %}
<section class="text-content body-font">
  {% if postsPage.page == 1 %}
  <!-- Page 1: Header + Featured + Grid Layout -->
  {% if config.homepage.heading %}
  <div class="w-full md:w-4/5 px-5 mx-auto my-10 text-center">
    <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-header">
      {{ config.homepage.heading }}
    </h1>
  </div>
  {% endif %}
  {%- include 'partials/categorynav.njk' -%}
  {{ cl.homePagePostsGrid(postsPage) }}
  {% else %}
  <!-- Page 2+: Grid Layout Only -->
  <div class="my-10 text-center">
    <h1 class="sm:text-4xl text-3xl font-medium title-font mb-4 text-header">
      All Posts - Page {{ postsPage.page }}
    </h1>
  </div>
  {{ cl.postsGrid(postsPage, "posts") }}
  {% endif %}
</section>
{% endmacro %}