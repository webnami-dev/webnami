
<div x-data="{ open: false }">
  <nav class="border-b border-border">
    <div class="max-w-5xl mx-auto px-5">
      <div class="flex justify-between items-center h-12">
        {# Logo / site name #}
        <div class="flex items-center gap-2">
          {% if config.site.logo %}
          <a href="/" class="flex items-center">
            <img
              class="h-6 w-auto"
              src="{{ config.site.logo | imagePath }}"
              alt="{{ config.site.name }}"
            />
          </a>
          {% endif %}
          <a href="/" class="flex items-center">
            <span class="text-content text-[15px] font-semibold tracking-tight">
              {{ config.site.name }}
            </span>
          </a>
        </div>

        <div class="flex items-center gap-1">
          {# Desktop nav links #}
          <nav class="hidden lg:flex items-center">
            {% for link in config.navbar.links %}
            <a
              href="{{ link.href }}"
              class="text-accent hover:text-content px-3 py-1.5 text-[13px] font-medium rounded-md hover:bg-surface-secondary"
            >
              {{ link.name }}
            </a>
            {% endfor %}
          </nav>

          {# Separator #}
          <div class="hidden lg:block w-px h-4 bg-border mx-2"></div>

          {# Theme toggle #}
          <div x-data>
            <button
              @click="$store.theme.lightTheme()"
              class="p-1.5 rounded-md text-accent hover:text-content hover:bg-surface-secondary"
              aria-label="Switch to light mode"
              x-show="$store.theme.dark"
            >
              {% icon "sun", "w-4 h-4" | safe %}
            </button>
            <button
              @click="$store.theme.darkTheme()"
              class="p-1.5 rounded-md text-accent hover:text-content hover:bg-surface-secondary"
              aria-label="Switch to dark mode"
              x-show="!$store.theme.dark"
            >
              {% icon "moon", "w-4 h-4" | safe %}
            </button>
          </div>

          {# Mobile hamburger #}
          <button
            @click="open = !open"
            class="lg:hidden p-1.5 rounded-md text-accent hover:text-content hover:bg-surface-secondary"
            aria-label="Toggle menu"
            :aria-expanded="open"
          >
            <span x-show="!open">{% icon "menu", "w-4 h-4" | safe %}</span>
            <span x-show="open">{% icon "x", "w-4 h-4" | safe %}</span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  {# Mobile dropdown #}
  <div
    x-show="open"
    x-collapse
    @keydown.escape.window="open = false"
    class="lg:hidden border-b border-border bg-background overflow-hidden"
  >
    <ul class="flex flex-col px-5 py-3 list-none">
      {% for link in config.navbar.links %}
      <li>
        <a
          href="{{ link.href }}"
          @click="open = false"
          class="block text-accent hover:text-content py-2 text-[13px] font-medium"
        >
          {{ link.name }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
