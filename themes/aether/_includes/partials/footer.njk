<footer class="bg-footer text-content border-t border-border">
  <div class="max-w-5xl mx-auto px-5 py-12">
    <div class="flex flex-col md:flex-row md:justify-between gap-10">

      {# Link Groups #}
      <div class="flex flex-wrap gap-x-16 gap-y-8 order-first">
        {% for group in config.footer.linkGroups %}
        <div>
          {% if group.title %}
          <h2 class="text-xs font-semibold text-accent uppercase tracking-wider mb-3">
            {{ group.title }}
          </h2>
          {% endif %}
          <ul class="list-none space-y-2">
            {% for link in group.links %}
            <li>
              <a
                href="{{ link.href }}"
                class="text-sm text-content hover:text-primary-500"
              >{{ link.name }}</a>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}
      </div>

      {# Logo, social, copyright #}
      <div class="flex flex-col items-start md:items-end gap-4 md:text-right shrink-0">
        <div class="flex items-center gap-2">
          {% if config.site.logo %}
          <img
            class="h-5 w-auto"
            src="{{ config.site.logo | imagePath }}"
            alt="{{ config.site.name }}"
          />
          {% endif %}
          <span class="text-sm font-semibold">{{ config.site.name }}</span>
        </div>

        {# Social Icons #}
        <div class="flex gap-2">
          {% for icon in config.footer.socialLinks %}
          <a
            href="{{ icon.href }}"
            class="p-1.5 rounded-md text-accent hover:text-content hover:bg-surface-secondary"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="{{ icon.name | title }}"
          >
            {% icon icon.name, "w-4 h-4" | safe %}
          </a>
          {% endfor %}
        </div>

        <p class="text-xs text-accent">
          &copy; {% currentYear %} {{ config.site.name }}. All rights reserved.
        </p>
      </div>
    </div>
  </div>

  <div class="border-t border-border">
    <div class="max-w-5xl mx-auto px-5 py-3 text-center">
      <p class="text-xs text-accent">
        Built with
        <a
          class="text-primary-500 hover:underline"
          href="https://webnami.in"
          target="_blank"
          rel="noopener"
        >WebNami</a>
      </p>
    </div>
  </div>
</footer>
